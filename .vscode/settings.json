{
    // Set the default
    "editor.formatOnSave": true,
    // Enable per-language
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[vue]": {
        "editor.formatOnSave": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.probe": ["javascript", "vue"],
    "eslint.validate": ["javascript", "vue"],
    "editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.eslint"],
}
